<h1>Listing comments</h1>

<table>
  <tr>
    <th>Post</th>
    <th>Email</th>
    <th>Name</th>
    <th>Website</th>
    <th>User</th>
    <th>Parent</th>
    <th>Content</th>
    <th>Status</th>
    <th>Featured</th>
  </tr>

<% @comments.each do |comment| %>
  <tr>
    <td><%=h comment.post_id %></td>
    <td><%=h comment.email %></td>
    <td><%=h comment.name %></td>
    <td><%=h comment.website %></td>
    <td><%=h comment.user_id %></td>
    <td><%=h comment.parent_id %></td>
    <td><%=h comment.content %></td>
    <td><%=h comment.status %></td>
    <td><%=h comment.featured %></td>
    <td><%= link_to 'Show', comment %></td>
    <td><%= link_to 'Edit', edit_comment_path(comment) %></td>
    <td><%= link_to 'Destroy', comment, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New comment', new_comment_path %>