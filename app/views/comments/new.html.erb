<head>
  <%= formtastic_stylesheet_link_tag %>
</head>

<h1>New comment</h1>

<% semantic_form_for(@comment) do |f| %>
  <%= f.error_messages %>
  <% f.inputs do %>
    <%= f.input :post, :as => :select, :collection => Post.active.last_published.find(:all) %>
    <%= f.input :email %>
    <%= f.input :name %>
    <%= f.input :website %>
    <%= f.input :content, :as => :text %>
    <%= f.input :status, :as => :select, :collection => Comment::STATUSES.values %>
    <%= f.input :featured, :as => :check_boxes %>
  <% end %>
  <% f.buttons do %>
    <%= f.commit_button 'Create' %>
  <% end %>
<% end %>

<%= link_to 'Back', comments_path %>

