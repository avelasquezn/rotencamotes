<head>
  <%= formtastic_stylesheet_link_tag %>
</head>

<h1>New studio</h1>

<% semantic_form_for(@studio) do |f| %>
  <%= f.error_messages %>
  <% f.inputs do %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :bio, :as => :text %>
  <% end %>
  <% f.buttons do %>
    <%= f.commit_button 'Create' %>
  <% end %>
<% end %>

<%= link_to 'Back', studios_path %>

