<h1>Listing blog_images</h1>

<table>
  <tr>
    <th>Blog</th>
    <th>Image file name</th>
    <th>Image content type</th>
    <th>Image file size</th>
    <th>Image updated at</th>
    <th>Image url</th>
  </tr>

<% @blog_images.each do |blog_image| %>
  <tr>
    <td><%=h blog_image.blog_id %></td>
    <td><%=h blog_image.image_file_name %></td>
    <td><%=h blog_image.image_content_type %></td>
    <td><%=h blog_image.image_file_size %></td>
    <td><%=h blog_image.image_updated_at %></td>
    <td><%=h blog_image.image_url %></td>
    <td><%= link_to 'Show', blog_image %></td>
    <td><%= link_to 'Edit', edit_blog_image_path(blog_image) %></td>
    <td><%= link_to 'Destroy', blog_image, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New blog_image', new_blog_image_path %>