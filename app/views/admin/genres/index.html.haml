
%h1 Listando géneros
%table
  %tr
    %th Nombre
  - @genres.each do |genre|
    %tr
      %td= h genre.name
      %td= link_to 'Ver', [:admin, genre]
      %td= link_to 'Editar', edit_admin_genre_path(genre)
      %td= link_to 'Eliminar', [:admin, genre], :confirm => '¿Estás seguro?', :method => :delete
%br/
= link_to 'Nuevo género', new_admin_genre_path

