%head
  = formtastic_stylesheet_link_tag
%h1 Editing blog
- semantic_form_for [ :admin, @blog ], :html => { :multipart => true }  do |f|
  = f.error_messages
  - f.inputs do
    = f.input :name
    = f.input :permalink
    = f.input :banner,  :as => :file
    = f.input :category
    = f.input :user
    = f.input :active
    = f.input :posts_counts, :as => :numeric
    = f.input :visits_count, :as => :numeric
  - f.buttons do
    = f.commit_button 'Update'
= link_to 'Show', @blog
|
\#{link_to 'Back', blogs_path}

