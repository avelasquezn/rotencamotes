= f.error_messages
- f.inputs do
  = f.input :theatre
  = f.input :movie
  = f.input :description
  = f.input :in_theatre_from, :as => :date
  = f.input :in_theatre_to,   :as => :date
  = f.input :status,          :as => :select, :collection => Schedule::STATUSES
  - semantic_fields_for :showtimes do |builder|
    = render :partial => 'showtime_fields', :locals => { :f => builder }
  = link_to_add_fields 'Agregar Horario', f, :showtimes

- f.buttons do
  = f.commit_button commit_label

