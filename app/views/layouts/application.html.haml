!!! 5
%html
  %head
    %meta{'http-equiv' => 'Content-Type', :content => "text/html; charset=iso-8859-1"}
    = formtastic_stylesheet_link_tag
    %title= "rotencamotes: #{controller.controller_name}"
    = stylesheet_link_tag 'reset','layout','banner'
  %body#home
    %header
      #header
        .wrapper
          %nav{:role => "navigation"}
            %ul
              %li= link_to "Inicio", root_path
              %li= link_to "Cartelera", schedules_path
              %li= link_to "Opiniones", posts_path
              %li= link_to "Cines", theatres_path
              %li
                %a{:href => "#"}Contáctenos
          %form.search{:role => "search", :enctype => "text/plain", :method => "post", :action => "#"}
            %input{:type => "text", :value => "Busca tus películas, géneros, años o lo que quieras"}
            %input.submit{:type => "submit"}


    #banner-cont.wrapper{:role => "banner"}= yield :banner
    #container.wrapper
      = yield


    %footer
      #footer.wrapper
        %nav{:role => "navigation"}
          %ul
            %li= link_to "Inicio", root_path
            %li= link_to "Cartelera", schedules_path
            %li= link_to "Opiniones", posts_path
            %li= link_to "Cines", theatres_path
            %li
              %a{:href => "#"}Contáctenos

