!!! 5
%html
  %head
    %meta{'http-equiv' => 'Content-Type', :content => "text/html; charset=iso-8859-1"}
    = formtastic_stylesheet_link_tag
    %title= "Rotencamotes :: Tu guía de cine en línea :: (#{controller.controller_name})"
    = stylesheet_link_tag 'reset','layout','banner'
    /[if IE 6 ]
      %link{:href => "stylesheets/ie6.css", :media => "screen", :rel => "stylesheet", :type => "text/css"}
    /[if IE]
      %script{:src=>"http://html5shim.googlecode.com/svn/trunk/html5.js"}
  /[if lt IE 7 ]
    :erb
      <body class="ie6 ie">
  /[if IE 7 ]
    :erb
      <body class="ie7 ie">
  /[if IE 8 ]
    :erb
      <body class="ie8 ie">
  /[if IE 9 ]
    :erb
      <body class="ie9 ie">
  / [if (gt IE 9)|!(IE)]><!
  %body{:class=>"home"}
    / <![endif]>
    %header
      #header
        .wrapper
          %a#logo{:href=> root_path}
            %span.hide Rotten Camote        
          %nav{:role => "navigation"}
            %ul
              %li= link_to "Inicio", root_path
              %li= link_to "Cartelera", schedules_path
              %li= link_to "Opiniones", posts_path
              %li= link_to "Cines", movie_chains_path
              %li
                %a{:href => "#"}Contáctenos
            .clear
            - if current_user
              %p.short
                = 'Conectado como '
                = link_to(current_user.full_name, current_user.profile)
                = ' '
                = link_to('Finalizar sesión', destroy_user_session_path)
            - else
              %p.short
                = link_to "Regístrate", new_user_registration_path
                o
                = link_to('Iniciar sesión', new_user_session_path)

          %form.search{:role => "search", :enctype => "text/plain", :method => "post", :action => "#"}
            %input{:type => "text", :value => "Busca tus películas, géneros, años o lo que quieras"}
            %input.submit{:type => "submit"}


    = yield :banner
    #container.wrapper
      = yield


    %footer
      #footer.wrapper
        %nav{:role => "navigation"}
          %ul
            %li= link_to "Inicio", root_path
            %li= link_to "Cartelera", schedules_path
            %li= link_to "Opiniones", posts_path
            %li= link_to "Cines", movie_chains_path
            %li
              %a{:href => "acerca"}Acerca de
            %li
              %a{:href => "#"}Contáctenos
    %script{:src=>"http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js"}
    %script{:src=>"/javascripts/jcarousellite_1.0.1.min.js"}
    %script{:src=>"/javascripts/application.js"}
