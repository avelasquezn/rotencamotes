<head>
  <%= formtastic_stylesheet_link_tag %>
</head>

<h1>Editing ad</h1>

<% semantic_form_for(@ad) do |f| %>
  <%= f.error_messages %>
  <% f.inputs do %>
    <%= f.input :name %>
    <%= f.input :campaign %>
    <%= f.input :content,     :as => :text %>
    <%= f.input :started_at,  :as => :date %>
    <%= f.input :finished_at, :as => :date %>
    <%= f.input :place,       :as => :select, :collection => Ad::PLACES.values %>
  <% end %>
  <% f.buttons do %>
      <%= f.commit_button 'Update' %>
  <% end %>
<% end %>

<%= link_to 'Show', @ad %> |
<%= link_to 'Back', ads_path %>

