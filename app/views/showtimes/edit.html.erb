<head>
  <%= formtastic_stylesheet_link_tag %>
</head>

<h1>Editing showtime</h1>

<% semantic_form_for(@showtime) do |f| %>
  <%= f.error_messages %>
  <% f.inputs do %>
    <%= f.input :schedule %>
    <%= f.input :shown_at, :as => :time %>
    <%= f.input :description %>
    <%= f.input :status, :as => :select, :collection => Showtime::STATUSES.values %>
  <% end %>
  <% f.inputs do %>
    <%= f.commit_button 'Update' %>
  <% end %>
<% end %>

<%= link_to 'Show', @showtime %> |
<%= link_to 'Back', showtimes_path %>

