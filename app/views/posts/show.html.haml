%p
  %b Blog:
  = h @post.blog.name
%p
  %b Title:
  = h @post.title
%p
  %b Content:
  = h @post.content
%p
  %b Authot:
  = h @post.user.full_name
%p
  %b Permalink:
  = h @post.permalink
%p
  %b Published at:
  = h @post.published_at
%p
  %b Cached tag list:
  = h @post.cached_tag_list
%p
  %b Comments count:
  = h @post.comments_count
%p
  %b Visits count:
  = h @post.visits_count
%p
  %b Rating:
  = h @post.rating
%p
  %b Status:
  = h @post.status
%p
  %b Comments:
  - @post.comments.each do |comment|
    %p
      = h "#{comment.user.full_name} says:"
    %p
      = h comment.content
%p
  = link_to 'Add Comment', new_comment_path(:post_id => @post.id)
|
