= f.error_messages
- f.inputs do
  = f.input :first_name
  = f.input :last_name
  = f.input :email
  = f.input :password, :as => :password
  = f.input :born_at, :as => :date
  = f.input :avatar, :as => :file
  - f.semantic_fields_for :profile do |profile|
    = profile.input :current_location, :as => :country
    = profile.input :favorite_genre
    = profile.input :favorite_actor
    = profile.input :favorite_director
    = profile.input :favorite_writer
    = profile.input :favorite_movie
    = profile.input :favorite_movie_character
    = profile.input :favorite_movie_line
  
- f.buttons do
  = f.commit_button commit_label


- form_for resource_name, resource, :url => registration_path(resource_name) do |f| 
  =f.label :email, "Correo Electrónico", :class=>"label"
  =f.text_field :email, :class => :text_field

  =f.label :password, "Contraseña",:class=>"label"
  =f.password_field :password, :class => :password_field

  =f.label :password_confirmation, "Verifica tu contraseña", :class=>"label"
  =f.error_message_on :password_confirmation
  =f.password_field :password_confirmation, :class => :password_field

  =f.submit "Registrarse", :class => "button submit"
  =link_to "Cancelar", "#", :onclick => "window.location='#{root_path}';return false", :class => "button cancel"

  .clear
  = render :partial => "shared/devise_links" 
