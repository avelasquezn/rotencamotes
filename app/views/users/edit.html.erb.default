<head>
  <%= formtastic_stylesheet_link_tag %>
</head>

<h1>Editing user</h1>

<% semantic_form_for(@user) do |f| %>
  <%= f.error_messages %>
  <% f.inputs do %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :email %>
    <%= f.input :password, :as => :password %>
    <%= f.input :born_at, :as => :date %>
  <% end %>
  <% f.buttons do %>
    <%= f.commit_button 'Update' %>
  <% end %>
<% end %>

<%= link_to 'Show', @user %> |
<%= link_to 'Back', users_path %>

