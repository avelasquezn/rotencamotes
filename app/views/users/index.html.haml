%head
  = formtastic_stylesheet_link_tag
%h1 Listing users
%table
  %tr
    %th First name
    %th Last name
    %th Email
    %th Password
    %th Born at
  - @users.each do |user|
    %tr
      %td= h user.first_name
      %td= h user.last_name
      %td= h user.email
      %td= h user.password
      %td= h user.born_at
      %td= link_to 'Show', user
      %td= link_to 'Edit', edit_user_path(user)
      %td= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete
%br/
= link_to 'New user', new_user_path
