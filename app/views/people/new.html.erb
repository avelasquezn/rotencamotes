<h1>New person</h1>

<% form_for(@person) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :firt_name %><br />
    <%= f.text_field :firt_name %>
  </p>
  <p>
    <%= f.label :middle_name %><br />
    <%= f.text_field :middle_name %>
  </p>
  <p>
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </p>
  <p>
    <%= f.label :born_at %><br />
    <%= f.datetime_select :born_at %>
  </p>
  <p>
    <%= f.label :born_in %><br />
    <%= f.text_field :born_in %>
  </p>
  <p>
    <%= f.label :procedence %><br />
    <%= f.text_field :procedence %>
  </p>
  <p>
    <%= f.label :bio %><br />
    <%= f.text_area :bio %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', people_path %>