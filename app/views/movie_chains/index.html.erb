<h1>Listing movie_chains</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>Bio</th>
  </tr>

<% @movie_chains.each do |movie_chain| %>
  <tr>
    <td><%=h movie_chain.name %></td>
    <td><%=h movie_chain.address %></td>
    <td><%=h movie_chain.bio %></td>
    <td><%= link_to 'Show', movie_chain %></td>
    <td><%= link_to 'Edit', edit_movie_chain_path(movie_chain) %></td>
    <td><%= link_to 'Destroy', movie_chain, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New movie_chain', new_movie_chain_path %>