<head>
  <%= formtastic_stylesheet_link_tag %>
</head>

<h1>Editing category</h1>

<% semantic_form_for(@category) do |f| %>
  <%= f.error_messages %>
  <% f.inputs do %>
    <%= f.input :name %>
    <%= f.input :category_type %>
  <% end %>
  <% f.buttons do %>
    <%= f.commit_button 'Update' %>
  <% end %>
<% end %>

<%= link_to 'Show', @category %> |
<%= link_to 'Back', categories_path %>

