<head>
  <%= formtastic_stylesheet_link_tag %>
</head>

<h1>New category</h1>

<% semantic_form_for(@category) do |f| %>
  <%= f.error_messages %>
  <% f.inputs do %>
    <%= f.input :name %>
    <%= f.input :category_type %>
  <% end %>
  <% f.buttons do %>
    <%= f.commit_button 'Create' %>
  <% end %>
<% end %>

<%= link_to 'Back', categories_path %>

