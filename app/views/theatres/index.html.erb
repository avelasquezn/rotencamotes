<h1>Listing theatres</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Address</th>
  </tr>

<% @theatres.each do |theatre| %>
  <tr>
    <td><%=h theatre.name %></td>
    <td><%=h theatre.address %></td>
    <td><%= link_to 'Show', theatre %></td>
    <td><%= link_to 'Edit', edit_theatre_path(theatre) %></td>
    <td><%= link_to 'Destroy', theatre, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New theatre', new_theatre_path %>