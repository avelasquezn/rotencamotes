<h1>New schedule</h1>

<% semantic_form_for(@schedule) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.input :theatre %>
  </p>
  <p>
    <%= f.input :movie %>
  </p>
  <p>
    <%= f.input :in_theatre_from %>
  </p>
  <p>
    <%= f.input :in_theatre_to %>
  </p>
  <p>
    <%= f.input :description %>
  </p>
  <p>
    <%= f.input :status,:as => :select, :collection => Schedule::STATUSES  %>
  </p>
  <p>
    <%= f.commit_button 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', schedules_path %>

