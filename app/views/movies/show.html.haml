#content
  #movie.widget
    .top
    .middle
      .movie
        =image_tag @movie.banner.url(:banner), :size => "150x222", :title => @movie.title, :alt => @movie.title, :class => "poster"
        %a.saw{:href => "#"}la he visto
        %a.comment{:href => "#"}comenta
      .detail
        %h3= @movie.name_with_year
        #tags= render_genres_links
        #rating
          %h4 Puntaje General
          .rating= number_to_percentage(@movie.final_score, :precision => 0)
          .camote 121
          .rotten 41
          .clear
        .spec
          %p
            %span Reparto:
          #tags= render_cast_links
          %p.short
            %span Dirección:
          #tags= render_directors_links
          %p.short
            %span Guión:
          #tags= render_writers_links
          %p.short
            %span Acerca de:
            = simple_format @movie.summary
      .clear
    .bottom

  #synopsis
    - widget_tag do
      .detail
        %h3 Sinopsis
      .spec
        %p
          = simple_format @movie.synopsis
      .clear

  #reviews.widget.talking
    .top
    .middle
      %h3 comentarios y valoraciones
      %ul= render :partial => "comment", :collection => @movie.comments.paginate(:page => params[:page])

    .bottom
    .pager
      = will_paginate @movie.comments.paginate(:page => params[:page])
      / %ul
      /   %li.first.hide
      /     %a{:href=>"#"}
      /       %span |<
      /   %li.prev.hide
      /     %a{:href=>"#"}
      /       %span <<
      /   %li.current
      /     %span 1
      /   %li
      /     %a{:href=>"#"} 2
      /   %li
      /     %a{:href=>"#"} 3
      /   %li
      /     %a{:href=>"#"} 4
      /   %li.next
      /     %a{:href=>"#"}
      /       %span >>
      /   %li.last
      /     %a{:href=>"#"}
      /       %span >|
      .clear
  #reply.widget
    .top
    .middle
      %h3 Deja Tu comentario y valoración para
      %h4= @movie.title
      %form
        %ul
          %li.rating
            %p Valoracion
            %label.camote{:for=>"camote"}
              %span
            %input.hide{:id=>"camote", :name=>"rating", :type=>"radio", :value=>"camote"}
            %label.rotten{:for=>"rotten"}
              %span
            %input.hide{:id=>"rotten", :name=>"rating", :type=>"radio", :value=>"rotten"}
          %li.comment
            %label{:for=>"comment"} Comentario
            %textarea{:id=>"comment", :name=>"comment"}
          %li
            %label{:for=>"name"} Nombre
            %input{:id=>"name", :name=>"name", :type=>"text"}
          %li
            %label{:for=>"email"} Email
            %input{:id=>"email", :name=>"email", :type=>"text"}
          %li
            %label{:for=>"cine"} La vi en
            %select{:id =>"cine", :name=>"cine"}
              %option{:value=>1} Cineplanet Alcazar
          %li
            %input{:type=>"submit", :value=>"Comentar"}

    .bottom
  #reply.widget
    .top
    .middle
      %h3 Deja Tu comentario y valoración para
      %h4= @movie.title
      = render :partial => 'comment_form'

#sidebar

  #share
    - widget_tag "Comparte esta página" do
      .links
        %a.facebook{:href=>"#"}
        %a.twitter{:href=>"#"}
        %a.email{:href=>"#"}
      %p.share

  #watch.widget
    .top
    .middle
      %h3 ¿Donde verla?
      %ul
        - @scheduled_movie_chains_for_movie.each do |movie_chain|
          %li
            .logo-cine
              - link_to movie_chain do
                = image_tag(movie_chain.logo.url(:small))
                85%
            %table
              - Schedule.active.from_movie_chain(movie_chain.id).from_movie(@movie.id).each do |schedule|
                %tr
                  %td= link_to schedule.theatre.name, schedule.theatre
                  %td.lang= schedule.description
                  %td= schedule.current_showtimes
    .bottom
  #related.widget
    .top
    .middle
      %h3 Opiniones Relacionadas
      %ul= render :partial => "post", :collection => @movie.posts
    .bottom
.clear

