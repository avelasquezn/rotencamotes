<head>
  <%= formtastic_stylesheet_link_tag %>
</head>

<h1>Editing award</h1>

<% semantic_form_for(@award) do |f| %>
  <%= f.error_messages %>
  <% f.inputs do %>
    <%= f.input :institution %>
    <%= f.input :category %>
    <%= f.input :year_received %>
    <%= f.input :status,  :as => :select, :collection => Award::STATUSES.values %>
    <%= f.input :person %>
    <%= f.input :movie %>
  <% end %>
  <% f.buttons do %>
    <%= f.commit_button 'Create' %>
  <% end %>
<% end %>

<%= link_to 'Show', @award %> |
<%= link_to 'Back', awards_path %>

