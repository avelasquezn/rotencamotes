<head>
  <%= formtastic_stylesheet_link_tag %>
</head>
<h1>New post_category</h1>

<% semantic_form_for(@post_category) do |f| %>
  <%= f.error_messages %>
  <% f.inputs do %>
    <%= f.input :post %>
    <%= f.input :category %>
  <% end %>
  <% f.buttons do %>
    <%= f.submit 'Create' %>
  <% end %>
<% end %>

<%= link_to 'Back', post_categories_path %>

