#content.sessions
  #opiniones
  
  - widget_tag do
    %h2 Cambiar tu contraseña
    - form_for resource_name, resource, :url => password_path(resource_name), :html => { :method => :put } do |f|
      = f.error_messages
      = f.hidden_field :reset_password_token
      %p= f.label :password, "Nueva Contraseña"
      %p= f.password_field :password
      %p= f.label :password_confirmation, "Confirma tu nueva contraseña"
      %p= f.password_field :password_confirmation
      %p= f.submit "¡Cambiarla!", :class => "create"
    = render :partial => "shared/devise_links"
